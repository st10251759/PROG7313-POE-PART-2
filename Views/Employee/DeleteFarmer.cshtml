<div class="container py-4">
    <div class="employee-container">
        <!-- Sidebar Navigation -->
        <div class="employee-sidebar d-none d-lg-block">
            <div class="sidebar-header">
                <h4>
                    <div class="employee-avatar">
                        <i class="fa fa-user-tie"></i>
                    </div>
                    Employee Portal
                </h4>
            </div>
            <ul class="nav nav-pills flex-column">
                <li class="nav-item">
                    <a class="nav-link" href="/Employee/Products">
                        <i class="fa fa-box"></i> Products
                    </a>
                </li>
                <li class="nav-item">
                    <a class="nav-link active" href="/Employee/Farmers">
                        <i class="fa fa-users"></i> Farmers
                    </a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="/Employee/CreateFarmer">
                        <i class="fa fa-user-plus"></i> Add New Farmer
                    </a>
                </li>      
            </ul>
        </div>

        <!-- Mobile Sidebar Navigation (for small screens) -->
        <div class="d-lg-none mb-4">
            <div class="card shadow-sm">
                <div class="card-body p-0">
                    <div class="list-group list-group-flush">
                        <a href="/Employee/Products" class="list-group-item list-group-item-action">
                            <i class="fa fa-box me-2"></i> Products
                        </a>
                        <a href="/Employee/Farmers" class="list-group-item list-group-item-action active">
                            <i class="fa fa-users me-2"></i> Farmers
                        </a>
                        <a href="/Employee/CreateFarmer" class="list-group-item list-group-item-action">
                            <i class="fa fa-user-plus me-2"></i> Add New Farmer
                        </a>
                    </div>
                </div>
            </div>
        </div>
        
        <!-- Main Content Area -->
        <div class="employee-content">
            <!-- Page Title -->
            <div class="page-title">
                <h1>Delete Farmer</h1>
                <p>Remove a farmer from the platform</p>
                <div class="page-divider"></div>
            </div>
            
            <!-- Delete Confirmation Card -->
            <div class="delete-card">
                <div class="delete-card-header">
                    <h3><i class="fa fa-exclamation-triangle"></i> Are you sure you want to delete this farmer?</h3>
                </div>
                
                <div class="delete-card-body">
                    <!-- Warning Message -->
                    <div class="warning-box">
                        <i class="fa fa-exclamation-circle"></i>
                        <p>All products associated with this farmer will also be deleted. This action cannot be undone.</p>
                    </div>
                    
                    <!-- Farmer Information -->
                    <div class="farmer-info">
                        <h5 class="info-title">
                            <i class="fa fa-user"></i> Farmer Details
                        </h5>
                        
                        <dl class="row info-list">
                            <dt class="col-sm-3"><i class="fa fa-user"></i> Name:</dt>
                            <dd class="col-sm-9">@Model.Firstname @Model.Lastname</dd>
                            
                            <dt class="col-sm-3"><i class="fa fa-envelope"></i> Email:</dt>
                            <dd class="col-sm-9">@Model.Email</dd>
                            
                            <dt class="col-sm-3"><i class="fa fa-phone"></i> Phone:</dt>
                            <dd class="col-sm-9">@(string.IsNullOrEmpty(Model.PhoneNumber) ? "Not provided" : Model.PhoneNumber)</dd>
                            
                            <dt class="col-sm-3"><i class="fa fa-map-marker-alt"></i> Location:</dt>
                            <dd class="col-sm-9">@(string.IsNullOrEmpty(Model.Location) ? "Not provided" : Model.Location)</dd>
                        </dl>
                    </div>
                    
                    <!-- Delete Form and Buttons -->
                    <form asp-action="DeleteFarmer">
                        <input type="hidden" asp-for="Id" />
                        <div class="form-buttons">
                            <a asp-action="Farmers" class="btn btn-employee-secondary">
                                <i class="fa fa-arrow-left"></i> Cancel
                            </a>
                            <button type="submit" class="btn btn-employee-danger">
                                <i class="fa fa-trash"></i> Delete Permanently
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>