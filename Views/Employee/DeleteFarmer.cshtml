<!-- Views/Employee/DeleteFarmer.cshtml -->
@model ST10251759_PROG7313_POE_PART_2.Models.ApplicationUser
@{
    ViewData["Title"] = "Delete Farmer";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<style>
    :root {
        --primary: #00674b;
        --secondary: #00AB66;
        --tertiary: #00A693;
        --accent: #34AD54;
        --light: #F6FFF2;
        --white: #ffffff;
        --light-gray: #f8f9fa;
        --medium-gray: #e9ecef;
        --dark-text: #343a40;
        --danger: #dc3545;
        --danger-light: #f8d7da;
        --danger-dark: #842029;
    }

    /* Employee Dashboard Layout */
    .employee-container {
        display: flex;
        min-height: calc(100vh - 300px);
    }

    /* Sidebar Styles */
    .employee-sidebar {
        width: 280px;
        background: linear-gradient(to bottom, var(--primary), var(--tertiary));
        color: var(--white);
        border-radius: 15px;
        box-shadow: 0 10px 25px rgba(0, 103, 75, 0.2);
        padding: 25px 0;
        transition: all 0.3s ease;
        margin-right: 25px;
        overflow: hidden;
    }

    .sidebar-header {
        padding: 0 20px 20px 20px;
        border-bottom: 1px solid rgba(255, 255, 255, 0.1);
        margin-bottom: 20px;
    }

    .sidebar-header h4 {
        margin: 0;
        color: var(--white);
        font-size: 1.5rem;
        display: flex;
        align-items: center;
    }

    .sidebar-header .employee-avatar {
        width: 55px;
        height: 55px;
        border-radius: 50%;
        background-color: var(--white);
        display: flex;
        align-items: center;
        justify-content: center;
        margin-right: 15px;
        font-size: 1.8rem;
        color: var(--primary);
    }

    .nav-pills .nav-link {
        color: rgba(255, 255, 255, 0.8);
        padding: 12px 20px;
        border-radius: 0;
        transition: all 0.3s;
        display: flex;
        align-items: center;
        margin: 2px 0;
    }

    .nav-pills .nav-link:hover {
        background-color: rgba(255, 255, 255, 0.1);
        color: var(--white);
    }

    .nav-pills .nav-link.active {
        background-color: rgba(255, 255, 255, 0.2);
        color: var(--white);
        border-left: 4px solid var(--white);
    }

    .nav-pills .nav-link i {
        margin-right: 10px;
        font-size: 1.1rem;
        width: 24px;
        text-align: center;
    }

    /* Main Content Area */
    .employee-content {
        flex: 1;
        padding: 0 15px;
        width: calc(100% - 280px);
    }

    /* Page Title */
    .page-title {
        margin-bottom: 25px;
        position: relative;
    }

    .page-title h1 {
        font-size: 2rem;
        margin-bottom: 10px;
        color: var(--primary);
        font-weight: 600;
    }

    .page-title p {
        color: #6c757d;
        margin-bottom: 0;
    }

    .page-divider {
        height: 4px;
        width: 60px;
        background: linear-gradient(to right, var(--primary), var(--secondary));
        margin-bottom: 25px;
        border-radius: 2px;
    }

    /* Delete Confirmation Card */
    .delete-card {
        background-color: var(--white);
        border-radius: 15px;
        box-shadow: 0 5px 30px rgba(0, 0, 0, 0.05);
        padding: 0;
        transition: all 0.3s ease;
        overflow: hidden;
        position: relative;
    }

    .delete-card-header {
        background-color: var(--danger-light);
        padding: 25px 30px;
        position: relative;
        border-bottom: 1px solid rgba(0, 0, 0, 0.05);
    }

    .delete-card-header::before {
        content: '';
        position: absolute;
        top: 0;
        left: 0;
        width: 6px;
        height: 100%;
        background-color: var(--danger);
    }

    .delete-card-header h3 {
        color: var(--danger-dark);
        font-size: 1.35rem;
        margin: 0;
        padding-left: 15px;
        display: flex;
        align-items: center;
    }

    .delete-card-header h3 i {
        margin-right: 12px;
        font-size: 1.5rem;
    }

    .delete-card-body {
        padding: 30px;
    }

    .warning-box {
        background-color: var(--danger-light);
        border-radius: 10px;
        padding: 15px 20px;
        margin-bottom: 25px;
        border-left: 4px solid var(--danger);
        display: flex;
        align-items: flex-start;
    }

    .warning-box i {
        color: var(--danger);
        font-size: 1.2rem;
        margin-right: 15px;
        margin-top: 2px;
    }

    .warning-box p {
        margin: 0;
        color: var(--danger-dark);
    }

    /* Farmer Information */
    .farmer-info {
        margin-bottom: 30px;
        background-color: var(--light-gray);
        border-radius: 10px;
        padding: 20px;
    }

    .info-title {
        color: var(--primary);
        font-size: 1.1rem;
        font-weight: 600;
        margin-bottom: 15px;
        display: flex;
        align-items: center;
    }

    .info-title i {
        margin-right: 10px;
        color: var(--primary);
    }

    .info-list {
        margin-bottom: 0;
    }

    .info-list dt {
        color: var(--dark-text);
        font-weight: 500;
        display: flex;
        align-items: center;
    }

    .info-list dt i {
        margin-right: 8px;
        color: var(--primary);
        font-size: 0.9rem;
        width: 20px;
    }

    .info-list dd {
        color: #6c757d;
        margin-bottom: 10px;
        padding-left: 28px;
    }

    /* Action Buttons */
    .form-buttons {
        margin-top: 30px;
        display: flex;
        justify-content: space-between;
    }

    .btn-employee-secondary {
        background-color: #e9ecef;
        color: var(--dark-text);
        border: none;
        padding: 12px 20px;
        border-radius: 50px;
        font-weight: 500;
        transition: all 0.3s;
        display: inline-flex;
        align-items: center;
    }

    .btn-employee-secondary:hover {
        background-color: #dee2e6;
        transform: translateY(-2px);
    }

    .btn-employee-danger {
        background: linear-gradient(135deg, #dc3545, #bd2130);
        color: white;
        border: none;
        padding: 12px 25px;
        border-radius: 50px;
        font-weight: 500;
        display: inline-flex;
        align-items: center;
        transition: all 0.3s;
        box-shadow: 0 4px 15px rgba(220, 53, 69, 0.2);
    }

    .btn-employee-danger:hover {
        transform: translateY(-3px);
        box-shadow: 0 8px 25px rgba(220, 53, 69, 0.3);
        color: white;
    }

    .btn-employee-secondary i, .btn-employee-danger i {
        margin-right: 8px;
    }

    
</style>

