@model IEnumerable<ST10251759_PROG7313_POE_PART_2.Models.Product>

@{
    ViewData["Title"] = "Products";
    Layout = "~/Views/Shared/_Layout.cshtml";
    
    // Calculate statistics for dashboard
    int totalProducts = Model.Count();
    int totalFarmers = Model.Select(p => p.User.Id).Distinct().Count();
    var categoryCounts = Model.GroupBy(p => p.Category)
        .Select(g => new { Category = g.Key, Count = g.Count() })
        .OrderByDescending(x => x.Count)
        .ToList();
    
    var recentProducts = Model.Where(p => p.ProductionDate >= DateTime.Now.AddMonths(-1)).Count();
    var oldestProduct = Model.OrderBy(p => p.ProductionDate).FirstOrDefault()?.ProductionDate;
    var newestProduct = Model.OrderByDescending(p => p.ProductionDate).FirstOrDefault()?.ProductionDate;
}

<style>
    :root {
        --primary: #00674b;
        --secondary: #00AB66;
        --tertiary: #00A693;
        --accent: #34AD54;
        --light: #F6FFF2;
        --white: #ffffff;
        --light-gray: #f8f9fa;
        --medium-gray: #e9ecef;
        --dark-text: #343a40;
    }

    /* Employee Dashboard Layout */
    .employee-container {
        display: flex;
        min-height: calc(100vh - 300px);
    }

    /* Sidebar Styles */
    .employee-sidebar {
        width: 280px;
        background: linear-gradient(to bottom, var(--primary), var(--tertiary));
        color: var(--white);
        border-radius: 15px;
        box-shadow: 0 10px 25px rgba(0, 103, 75, 0.2);
        padding: 25px 0;
        transition: all 0.3s ease;
        margin-right: 25px;
        overflow: hidden;
    }

    .sidebar-header {
        padding: 0 20px 20px 20px;
        border-bottom: 1px solid rgba(255, 255, 255, 0.1);
        margin-bottom: 20px;
    }

    .sidebar-header h4 {
        margin: 0;
        color: var(--white);
        font-size: 1.5rem;
        display: flex;
        align-items: center;
    }

    .sidebar-header .employee-avatar {
        width: 55px;
        height: 55px;
        border-radius: 50%;
        background-color: var(--white);
        display: flex;
        align-items: center;
        justify-content: center;
        margin-right: 15px;
        font-size: 1.8rem;
        color: var(--primary);
    }

    .nav-pills .nav-link {
        color: rgba(255, 255, 255, 0.8);
        padding: 12px 20px;
        border-radius: 0;
        transition: all 0.3s;
        display: flex;
        align-items: center;
        margin: 2px 0;
    }

    .nav-pills .nav-link:hover {
        background-color: rgba(255, 255, 255, 0.1);
        color: var(--white);
    }

    .nav-pills .nav-link.active {
        background-color: rgba(255, 255, 255, 0.2);
        color: var(--white);
        border-left: 4px solid var(--white);
    }

    .nav-pills .nav-link i {
        margin-right: 10px;
        font-size: 1.1rem;
        width: 24px;
        text-align: center;
    }

    /* Main Content Area */
    .employee-content {
        flex: 1;
        padding: 0 15px;
        width: calc(100% - 280px);
    }

    /* Page Title */
    .page-title {
        margin-bottom: 25px;
        position: relative;
    }

    .page-title h1 {
        font-size: 2rem;
        margin-bottom: 10px;
        color: var(--primary);
        font-weight: 600;
    }

    .page-title p {
        color: #6c757d;
        margin-bottom: 0;
    }

    .page-divider {
        height: 4px;
        width: 60px;
        background: linear-gradient(to right, var(--primary), var(--secondary));
        margin-bottom: 25px;
        border-radius: 2px;
    }

    /* Dashboard Stats */
    .stats-container {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(240px, 1fr));
        gap: 20px;
        margin-bottom: 30px;
    }

    .stat-card {
        background-color: var(--white);
        border-radius: 15px;
        box-shadow: 0 5px 15px rgba(0, 0, 0, 0.05);
        padding: 20px;
        display: flex;
        align-items: center;
        transition: all 0.3s ease;
        border-left: 4px solid var(--secondary);
    }

    .stat-card:hover {
        transform: translateY(-5px);
        box-shadow: 0 10px 25px rgba(0, 0, 0, 0.1);
    }

    .stat-card.total {
        border-color: var(--tertiary);
    }

    .stat-card.farmers {
        border-color: var(--primary);
    }

    .stat-card.categories {
        border-color: var(--accent);
    }

    .stat-card.recent {
        border-color: var(--secondary);
    }

    .stat-icon {
        background: linear-gradient(135deg, var(--tertiary), var(--secondary));
        width: 60px;
        height: 60px;
        border-radius: 12px;
        display: flex;
        align-items: center;
        justify-content: center;
        margin-right: 20px;
        color: var(--white);
        font-size: 1.5rem;
    }

    .stat-card.total .stat-icon {
        background: linear-gradient(135deg, #00A693, #00674b);
    }

    .stat-card.farmers .stat-icon {
        background: linear-gradient(135deg, #00674b, #34AD54);
    }

    .stat-card.categories .stat-icon {
        background: linear-gradient(135deg, #34AD54, #00AB66);
    }

    .stat-card.recent .stat-icon {
        background: linear-gradient(135deg, #00AB66, #00A693);
    }

    .stat-info h3 {
        font-size: 1.8rem;
        margin: 0 0 5px 0;
        font-weight: 700;
        color: var(--dark-text);
    }

    .stat-info p {
        margin: 0;
        color: #6c757d;
        font-size: 0.95rem;
    }

    /* Filter Card */
    .filter-card {
        background-color: var(--white);
        border-radius: 15px;
        box-shadow: 0 5px 15px rgba(0, 0, 0, 0.05);
        padding: 25px;
        margin-bottom: 30px;
        position: relative;
        overflow: hidden;
    }

    .filter-card::before {
        content: '';
        position: absolute;
        top: 0;
        left: 0;
        width: 6px;
        height: 100%;
        background: linear-gradient(to bottom, var(--primary), var(--secondary));
    }

    .filter-title {
        color: var(--primary);
        font-size: 1.2rem;
        font-weight: 600;
        margin-bottom: 20px;
        padding-bottom: 10px;
        border-bottom: 1px solid var(--medium-gray);
        display: flex;
        align-items: center;
    }

    .filter-title i {
        margin-right: 10px;
        color: var(--primary);
    }

    .form-label {
        color: var(--dark-text);
        font-weight: 500;
        margin-bottom: 8px;
        display: flex;
        align-items: center;
    }

    .form-label i {
        margin-right: 8px;
        color: var(--primary);
        font-size: 0.9rem;
    }

    .form-control, .form-select {
        border: 1.5px solid #e1e1e1;
        border-radius: 8px;
        padding: 10px 15px;
        transition: all 0.3s ease;
        font-size: 1rem;
        background-color: var(--white);
        color: var(--dark-text);
    }

    .form-control:focus, .form-select:focus {
        border-color: var(--secondary);
        box-shadow: 0 0 0 0.25rem rgba(0, 171, 102, 0.15);
    }

    .btn-search {
        background: linear-gradient(135deg, var(--primary), var(--secondary));
        color: white;
        border: none;
        border-radius: 8px;
        transition: all 0.3s;
        padding: 10px 15px;
    }

    .btn-search:hover {
        transform: translateY(-2px);
        box-shadow: 0 5px 15px rgba(0, 103, 75, 0.2);
    }

    /* Category Badges */
    .category-badge {
        background-color: var(--light);
        color: var(--primary);
        border-radius: 50px;
        padding: 5px 15px;
        font-size: 0.85rem;
        font-weight: 500;
        display: inline-block;
        margin-bottom: 10px;
    }

    /* Product Cards */
    .products-grid {
        display: grid;
        grid-template-columns: repeat(auto-fill, minmax(280px, 1fr));
        gap: 25px;
    }

    .product-card {
        background-color: var(--white);
        border-radius: 15px;
        box-shadow: 0 5px 15px rgba(0, 0, 0, 0.05);
        overflow: hidden;
        transition: all 0.3s ease;
        height: 100%;
        display: flex;
        flex-direction: column;
        position: relative;
    }

    .product-card:hover {
        transform: translateY(-7px);
        box-shadow: 0 15px 30px rgba(0, 0, 0, 0.1);
    }

    .product-image {
        height: 200px;
        overflow: hidden;
        position: relative;
    }

    .product-image img {
        width: 100%;
        height: 100%;
        object-fit: cover;
        transition: transform 0.5s ease;
    }

    .product-card:hover .product-image img {
        transform: scale(1.05);
    }

    .product-category {
        position: absolute;
        top: 15px;
        right: 15px;
        background: linear-gradient(135deg, var(--primary), var(--secondary));
        color: white;
        padding: 5px 15px;
        border-radius: 50px;
        font-size: 0.8rem;
        font-weight: 500;
        z-index: 1;
    }

    .product-details {
        padding: 20px;
        flex-grow: 1;
        display: flex;
        flex-direction: column;
    }

    .product-title {
        font-size: 1.25rem;
        font-weight: 600;
        margin-bottom: 10px;
        color: var(--dark-text);
    }

    .product-info {
        margin-bottom: 15px;
        color: #6c757d;
    }

    .product-info p {
        margin-bottom: 8px;
        display: flex;
        align-items: center;
    }

    .product-info i {
        width: 20px;
        margin-right: 8px;
        color: var(--primary);
    }

    .btn-view-details {
        background: linear-gradient(135deg, var(--primary), var(--secondary));
        color: white;
        border: none;
        border-radius: 50px;
        padding: 10px 0;
        font-weight: 500;
        display: flex;
        align-items: center;
        justify-content: center;
        transition: all 0.3s;
        margin-top: auto;
    }

    .btn-view-details:hover {
        transform: translateY(-3px);
        box-shadow: 0 5px 15px rgba(0, 103, 75, 0.2);
        color: white;
    }

    .btn-view-details i {
        margin-right: 8px;
    }

</style>

