<!-- Views/Employee/Farmers.cshtml -->
@model IEnumerable<ST10251759_PROG7313_POE_PART_2.Models.ApplicationUser>
@{
    ViewData["Title"] = "Farmers";
    Layout = "~/Views/Shared/_Layout.cshtml";
    
    // Calculate statistics for dashboard
    int totalFarmers = Model.Count();
    int farmersWithPhone = Model.Count(f => !string.IsNullOrEmpty(f.PhoneNumber));
    var locationGroups = Model.GroupBy(f => f.Location)
        .Select(g => new { Location = g.Key, Count = g.Count() })
        .OrderByDescending(x => x.Count)
        .ToList();
}

<style>
    :root {
        --primary: #00674b;
        --secondary: #00AB66;
        --tertiary: #00A693;
        --accent: #34AD54;
        --light: #F6FFF2;
        --white: #ffffff;
        --light-gray: #f8f9fa;
        --medium-gray: #e9ecef;
        --dark-text: #343a40;
    }

    /* Employee Dashboard Layout */
    .employee-container {
        display: flex;
        min-height: calc(100vh - 300px);
    }

    /* Sidebar Styles */
    .employee-sidebar {
        width: 280px;
        background: linear-gradient(to bottom, var(--primary), var(--tertiary));
        color: var(--white);
        border-radius: 15px;
        box-shadow: 0 10px 25px rgba(0, 103, 75, 0.2);
        padding: 25px 0;
        transition: all 0.3s ease;
        margin-right: 25px;
        overflow: hidden;
    }

    .sidebar-header {
        padding: 0 20px 20px 20px;
        border-bottom: 1px solid rgba(255, 255, 255, 0.1);
        margin-bottom: 20px;
    }

    .sidebar-header h4 {
        margin: 0;
        color: var(--white);
        font-size: 1.5rem;
        display: flex;
        align-items: center;
    }

    .sidebar-header .employee-avatar {
        width: 55px;
        height: 55px;
        border-radius: 50%;
        background-color: var(--white);
        display: flex;
        align-items: center;
        justify-content: center;
        margin-right: 15px;
        font-size: 1.8rem;
        color: var(--primary);
    }

    .nav-pills .nav-link {
        color: rgba(255, 255, 255, 0.8);
        padding: 12px 20px;
        border-radius: 0;
        transition: all 0.3s;
        display: flex;
        align-items: center;
        margin: 2px 0;
    }

    .nav-pills .nav-link:hover {
        background-color: rgba(255, 255, 255, 0.1);
        color: var(--white);
    }

    .nav-pills .nav-link.active {
        background-color: rgba(255, 255, 255, 0.2);
        color: var(--white);
        border-left: 4px solid var(--white);
    }

    .nav-pills .nav-link i {
        margin-right: 10px;
        font-size: 1.1rem;
        width: 24px;
        text-align: center;
    }

    /* Main Content Area */
    .employee-content {
        flex: 1;
        padding: 0 15px;
        width: calc(100% - 280px);
    }

    /* Page Title */
    .page-title {
        margin-bottom: 25px;
        position: relative;
    }

    .page-title h1 {
        font-size: 2rem;
        margin-bottom: 10px;
        color: var(--primary);
        font-weight: 600;
    }

    .page-title p {
        color: #6c757d;
        margin-bottom: 0;
    }

    .page-divider {
        height: 4px;
        width: 60px;
        background: linear-gradient(to right, var(--primary), var(--secondary));
        margin-bottom: 25px;
        border-radius: 2px;
    }

    /* Dashboard Stats */
    .stats-container {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(240px, 1fr));
        gap: 20px;
        margin-bottom: 30px;
    }

    .stat-card {
        background-color: var(--white);
        border-radius: 15px;
        box-shadow: 0 5px 15px rgba(0, 0, 0, 0.05);
        padding: 20px;
        display: flex;
        align-items: center;
        transition: all 0.3s ease;
        border-left: 4px solid var(--secondary);
    }

    .stat-card:hover {
        transform: translateY(-5px);
        box-shadow: 0 10px 25px rgba(0, 0, 0, 0.1);
    }

    .stat-card.total {
        border-color: var(--tertiary);
    }

    .stat-card.locations {
        border-color: var(--primary);
    }

    .stat-card.registered {
        border-color: var(--accent);
    }

    .stat-icon {
        background: linear-gradient(135deg, var(--tertiary), var(--secondary));
        width: 60px;
        height: 60px;
        border-radius: 12px;
        display: flex;
        align-items: center;
        justify-content: center;
        margin-right: 20px;
        color: var(--white);
        font-size: 1.5rem;
    }

    .stat-card.total .stat-icon {
        background: linear-gradient(135deg, #00A693, #00674b);
    }

    .stat-card.locations .stat-icon {
        background: linear-gradient(135deg, #00674b, #34AD54);
    }

    .stat-card.registered .stat-icon {
        background: linear-gradient(135deg, #34AD54, #00AB66);
    }

    .stat-info h3 {
        font-size: 1.8rem;
        margin: 0 0 5px 0;
        font-weight: 700;
        color: var(--dark-text);
    }

    .stat-info p {
        margin: 0;
        color: #6c757d;
        font-size: 0.95rem;
    }

    /* Action Buttons */
    .action-buttons {
        margin-bottom: 25px;
        display: flex;
        justify-content: flex-end;
    }

    .btn-add-farmer {
        background: linear-gradient(135deg, var(--primary), var(--secondary));
        color: white;
        border: none;
        padding: 10px 20px;
        border-radius: 50px;
        font-weight: 500;
        display: inline-flex;
        align-items: center;
        transition: all 0.3s;
        box-shadow: 0 4px 15px rgba(0, 103, 75, 0.2);
    }

    .btn-add-farmer:hover {
        transform: translateY(-3px);
        box-shadow: 0 8px 25px rgba(0, 103, 75, 0.3);
        color: white;
    }

    .btn-add-farmer i {
        margin-right: 10px;
    }

    /* Table Styling */
    .farmers-table-container {
        background-color: var(--white);
        border-radius: 15px;
        box-shadow: 0 5px 30px rgba(0, 0, 0, 0.05);
        overflow: hidden;
        margin-bottom: 30px;
    }

    .farmers-table {
        width: 100%;
        border-collapse: separate;
        border-spacing: 0;
    }

    .farmers-table thead th {
        background: linear-gradient(135deg, var(--primary), var(--secondary));
        color: white;
        font-weight: 500;
        padding: 15px 20px;
        text-align: left;
        font-size: 1rem;
        border: none;
        position: relative;
    }

    .farmers-table thead th:first-child {
        border-top-left-radius: 15px;
    }

    .farmers-table thead th:last-child {
        border-top-right-radius: 15px;
    }

    .farmers-table tbody tr {
        transition: all 0.3s ease;
    }

    .farmers-table tbody tr:hover {
        background-color: rgba(0, 103, 75, 0.05);
    }

    .farmers-table tbody tr:nth-child(even) {
        background-color: rgba(0, 0, 0, 0.02);
    }

    .farmers-table tbody td {
        padding: 15px 20px;
        vertical-align: middle;
        border-top: 1px solid var(--medium-gray);
        color: var(--dark-text);
    }

    .farmers-table tbody td:first-child {
        font-weight: 500;
    }

    /* Empty State */
    .empty-state {
        background-color: var(--light);
        border-radius: 15px;
        padding: 30px;
        text-align: center;
        margin-bottom: 30px;
    }

    .empty-state i {
        font-size: 3rem;
        color: var(--primary);
        margin-bottom: 15px;
        opacity: 0.7;
    }

    .empty-state h4 {
        margin-bottom: 10px;
        color: var(--dark-text);
    }

    .empty-state p {
        color: #6c757d;
        margin-bottom: 20px;
    }

    /* Action Buttons */
    .btn-delete {
        background-color: transparent;
        color: #dc3545;
        border: 1px solid #dc3545;
        padding: 6px 12px;
        border-radius: 50px;
        font-size: 0.9rem;
        transition: all 0.3s;
        display: inline-flex;
        align-items: center;
    }

    .btn-delete:hover {
        background-color: #dc3545;
        color: white;
        transform: translateY(-2px);
    }

    .btn-delete i {
        margin-right: 6px;
    }


</style>

