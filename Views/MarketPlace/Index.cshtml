        window.addEventListener('scroll', function () {
            const productCards = document.querySelectorAll('.product-card');
            productCards.forEach(card => {
                const rect = card.getBoundingClientRect();
                if (rect.top <= window.innerHeight * 0.8) {
                    card.classList.add('fadeInUp');
                }
            });
        });

        // Handle form submission in ROI calculator
        const roiCalculatorForm = document.querySelector('.col-lg-6 form:first-of-type');
        if (roiCalculatorForm) {
            roiCalculatorForm.addEventListener('submit', function (e) {
                e.preventDefault();
                alert('ROI calculation would be implemented here!');
            });
        }

        // Handle form submission in system selector
        const systemSelectorForm = document.querySelector('.col-lg-6 form:nth-of-type(2)');
        if (systemSelectorForm) {
            systemSelectorForm.addEventListener('submit', function (e) {
                e.preventDefault();
                alert('System recommendations would be displayed here!');
            });
        }

        // Handle contact form submission
        const contactForm = document.querySelector('.bg-white.rounded-3.p-4.p-sm-5 form');
        if (contactForm) {
            contactForm.addEventListener('submit', function (e) {
                e.preventDefault();
                alert('Your request has been submitted. Our team will contact you shortly!');
                this.reset();
            });
        }
    </script>
}