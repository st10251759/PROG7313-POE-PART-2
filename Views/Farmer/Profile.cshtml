            </div>
            
            <!-- Password Section -->
            <div class="profile-card">
                <h4 class="profile-card-title">
                    <i class="fa fa-lock"></i>Update Password
                </h4>
                
                @if (TempData["PasswordChangeSuccess"] != null)
                {
                    <div class="alert-custom alert-success-custom">
                        <i class="fa fa-check-circle"></i>
