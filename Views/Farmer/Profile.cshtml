<style>
    :root {
        --primary: #00674b;
        --secondary: #00AB66;
        --tertiary: #00A693;
        --accent: #34AD54;
        --light: #F6FFF2;
        --white: #ffffff;
        --light-gray: #f8f9fa;
        --medium-gray: #e9ecef;
        --dark-text: #343a40;
    }

    /* Farmer Dashboard Layout */
    .farmer-container {
        display: flex;
        min-height: calc(100vh - 300px);
    }

    /* Sidebar Styles */
    .farmer-sidebar {
        width: 280px;
        background: linear-gradient(to bottom, var(--primary), var(--tertiary));
        color: var(--white);
        border-radius: 15px;
        box-shadow: 0 10px 25px rgba(0, 103, 75, 0.2);
        padding: 25px 0;
        transition: all 0.3s ease;
        margin-right: 25px;
        overflow: hidden;
    }

    .sidebar-header {
        padding: 0 20px 20px 20px;
        border-bottom: 1px solid rgba(255, 255, 255, 0.1);
        margin-bottom: 20px;
    }

    .sidebar-header h4 {
        margin: 0;
        color: var(--white);
        font-size: 1.5rem;
        display: flex;
        align-items: center;
    }

    .sidebar-header .farmer-avatar {
        width: 55px;
        height: 55px;
        border-radius: 50%;
        background-color: var(--white);
        display: flex;
        align-items: center;
        justify-content: center;
        margin-right: 15px;
        font-size: 1.8rem;
        color: var(--primary);
    }

    .nav-pills .nav-link {
        color: rgba(255, 255, 255, 0.8);
        padding: 12px 20px;
        border-radius: 0;
        transition: all 0.3s;
        display: flex;
        align-items: center;
        margin: 2px 0;
    }

    .nav-pills .nav-link:hover {
        background-color: rgba(255, 255, 255, 0.1);
        color: var(--white);
    }

    .nav-pills .nav-link.active {
        background-color: rgba(255, 255, 255, 0.2);
        color: var(--white);
        border-left: 4px solid var(--white);
    }

    .nav-pills .nav-link i {
        margin-right: 10px;
        font-size: 1.1rem;
        width: 24px;
        text-align: center;
    }

    /* Main Content Area */
    .farmer-content {
        flex: 1;
        padding: 0 15px;
        width: calc(100% - 280px);
    }

    /* Page Title */
    .page-title {
        margin-bottom: 25px;
        position: relative;
    }

    .page-title h1 {
        font-size: 2rem;
        margin-bottom: 10px;
        color: var(--primary);
        font-weight: 600;
    }

    .page-title p {
        color: #6c757d;
        margin-bottom: 0;
    }

    .page-divider {
        height: 4px;
        width: 60px;
        background: linear-gradient(to right, var(--primary), var(--secondary));
        margin-bottom: 25px;
        border-radius: 2px;
    }

    /* Profile Cards */
    .profile-card {
        background-color: var(--white);
        border-radius: 15px;
        box-shadow: 0 5px 30px rgba(0, 0, 0, 0.05);
        padding: 30px;
        transition: all 0.3s ease;
        position: relative;
        overflow: hidden;
        margin-bottom: 30px;
    }

    .profile-card::before {
        content: '';
        position: absolute;
        top: 0;
        left: 0;
        width: 6px;
        height: 100%;
        background: linear-gradient(to bottom, var(--primary), var(--secondary));
    }

    .profile-card-title {
        color: var(--primary);
        font-size: 1.3rem;
        font-weight: 600;
        margin-bottom: 25px;
        padding-bottom: 10px;
        border-bottom: 1px solid var(--medium-gray);
        display: flex;
        align-items: center;
    }

    .profile-card-title i {
        margin-right: 12px;
        font-size: 1.4rem;
        color: var(--primary);
    }

    /* Form Styling */
    .form-group {
        margin-bottom: 20px;
        position: relative;
    }

    .form-label {
        color: var(--dark-text);
        font-weight: 500;
        margin-bottom: 8px;
        display: flex;
        align-items: center;
    }

    .form-label i {
        margin-right: 8px;
        color: var(--primary);
        font-size: 0.9rem;
    }

    .form-control {
        border: 1.5px solid #e1e1e1;
        border-radius: 8px;
        padding: 12px 15px;
        transition: all 0.3s ease;
        font-size: 1rem;
        background-color: var(--white);
        color: var(--dark-text);
    }

    .form-control:focus {
        border-color: var(--secondary);
        box-shadow: 0 0 0 0.25rem rgba(0, 171, 102, 0.15);
    }

    .form-control:read-only {
        background-color: var(--light-gray);
        color: #6c757d;
    }

    .form-text {
        color: #6c757d;
        font-size: 0.85rem;
        margin-top: 5px;
    }

    /* Password Strength Meter */
    .password-strength-meter {
        height: 6px;
        background-color: var(--medium-gray);
        margin-top: 10px;
        border-radius: 3px;
        overflow: hidden;
    }

    .password-strength-value {
        height: 100%;
        border-radius: 3px;
        width: 0%;
        transition: width 0.3s ease, background-color 0.3s ease;
    }

    .strength-text {
        font-size: 0.8rem;
        margin-top: 5px;
    }

    .strength-weak {
        background-color: #dc3545;
        width: 20%;
    }

    .strength-fair {
        background-color: #ffc107;
        width: 40%;
    }

    .strength-good {
        background-color: #34AD54;
        width: 70%;
    }

    .strength-strong {
        background-color: #00AB66;
        width: 100%;
    }

    /* Button Styling */
    .btn-farmer-primary {
        background: linear-gradient(135deg, var(--primary), var(--secondary));
        color: white;
        border: none;
        padding: 12px 30px;
        border-radius: 50px;
        font-weight: 500;
        display: inline-flex;
        align-items: center;
        transition: all 0.3s ease;
        box-shadow: 0 4px 15px rgba(0, 103, 75, 0.2);
    }

    .btn-farmer-primary:hover {
        transform: translateY(-3px);
        box-shadow: 0 8px 25px rgba(0, 103, 75, 0.3);
        color: white;
    }

    .btn-farmer-primary i {
        margin-right: 8px;
    }

    /* Alert Styling */
    .alert-custom {
        padding: 15px;
        margin-bottom: 20px;
        border-radius: 8px;
        display: flex;
        align-items: center;
    }

    .alert-custom i {
        margin-right: 12px;
        font-size: 1.5rem;
    }

    .alert-success-custom {
        background-color: #f0f9f4;
        border-left: 4px solid var(--secondary);
    }
    
    .alert-success-custom i {
        color: var(--secondary);
    }

    .alert-danger-custom {
        background-color: #fff8f8;
        border-left: 4px solid #dc3545;
    }
    
    .alert-danger-custom i {
        color: #dc3545;
    }

</style>

