<!-- Views/Farmer/CreateProduct.cshtml -->
@model ST10251759_PROG7313_POE_PART_2.Models.Product
@{
    ViewData["Title"] = "Add New Product";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<style>
    :root {
        --primary: #00674b;
        --secondary: #00AB66;
        --tertiary: #00A693;
        --accent: #34AD54;
        --light: #F6FFF2;
        --white: #ffffff;
        --light-gray: #f8f9fa;
        --medium-gray: #e9ecef;
        --dark-text: #343a40;
    }

    /* Farmer Dashboard Layout */
    .farmer-container {
        display: flex;
        min-height: calc(100vh - 300px);
    }

    /* Sidebar Styles */
    .farmer-sidebar {
        width: 280px;
        background: linear-gradient(to bottom, var(--primary), var(--tertiary));
        color: var(--white);
        border-radius: 15px;
        box-shadow: 0 10px 25px rgba(0, 103, 75, 0.2);
        padding: 25px 0;
        transition: all 0.3s ease;
        margin-right: 25px;
        overflow: hidden;
    }

    .sidebar-header {
        padding: 0 20px 20px 20px;
        border-bottom: 1px solid rgba(255, 255, 255, 0.1);
        margin-bottom: 20px;
    }

    .sidebar-header h4 {
        margin: 0;
        color: var(--white);
        font-size: 1.5rem;
        display: flex;
        align-items: center;
    }

    .sidebar-header .farmer-avatar {
        width: 55px;
        height: 55px;
        border-radius: 50%;
        background-color: var(--white);
        display: flex;
        align-items: center;
        justify-content: center;
        margin-right: 15px;
        font-size: 1.8rem;
        color: var(--primary);
    }

    .nav-pills .nav-link {
        color: rgba(255, 255, 255, 0.8);
        padding: 12px 20px;
        border-radius: 0;
        transition: all 0.3s;
        display: flex;
        align-items: center;
        margin: 2px 0;
    }

    .nav-pills .nav-link:hover {
        background-color: rgba(255, 255, 255, 0.1);
        color: var(--white);
    }

    .nav-pills .nav-link.active {
        background-color: rgba(255, 255, 255, 0.2);
        color: var(--white);
        border-left: 4px solid var(--white);
    }

    .nav-pills .nav-link i {
        margin-right: 10px;
        font-size: 1.1rem;
        width: 24px;
        text-align: center;
    }

    /* Main Content Area */
    .farmer-content {
        flex: 1;
        padding: 0 15px;
        width: calc(100% - 280px);
    }

    /* Page Title */
    .page-title {
        margin-bottom: 25px;
        position: relative;
    }

    .page-title h1 {
        font-size: 2rem;
        margin-bottom: 10px;
        color: var(--primary);
        font-weight: 600;
    }

    .page-title p {
        color: #6c757d;
        margin-bottom: 0;
    }

    .page-divider {
        height: 4px;
        width: 60px;
        background: linear-gradient(to right, var(--primary), var(--secondary));
        margin-bottom: 25px;
        border-radius: 2px;
    }

    /* Form Styling */
    .form-card {
        background-color: var(--white);
        border-radius: 15px;
        box-shadow: 0 5px 30px rgba(0, 0, 0, 0.05);
        padding: 30px;
        transition: all 0.3s ease;
        position: relative;
        overflow: hidden;
    }

    .form-card::before {
        content: '';
        position: absolute;
        top: 0;
        left: 0;
        width: 6px;
        height: 100%;
        background: linear-gradient(to bottom, var(--primary), var(--secondary));
    }

    .form-section {
        margin-bottom: 30px;
        position: relative;
    }

    .form-section-title {
        color: var(--primary);
        font-size: 1.2rem;
        font-weight: 600;
        margin-bottom: 20px;
        padding-bottom: 10px;
        border-bottom: 1px solid var(--medium-gray);
        display: flex;
        align-items: center;
    }

    .form-section-title i {
        margin-right: 10px;
        color: var(--primary);
    }

    .form-group {
        margin-bottom: 20px;
        position: relative;
    }

    .form-label {
        color: var(--dark-text);
        font-weight: 500;
        margin-bottom: 8px;
        display: flex;
        align-items: center;
    }

    .form-label i {
        margin-right: 8px;
        color: var(--primary);
        font-size: 0.9rem;
    }

    .form-control, .form-select {
        border: 1.5px solid #e1e1e1;
        border-radius: 8px;
        padding: 12px 15px;
        transition: all 0.3s ease;
        font-size: 1rem;
        background-color: var(--white);
        color: var(--dark-text);
    }

    .form-control:focus, .form-select:focus {
        border-color: var(--secondary);
        box-shadow: 0 0 0 0.25rem rgba(0, 171, 102, 0.15);
    }

    .form-text {
        color: #6c757d;
        font-size: 0.85rem;
        margin-top: 5px;
    }

    .required-indicator {
        color: #dc3545;
        margin-left: 3px;
    }

    /* Image Preview */
    .image-preview-container {
        text-align: center;
        margin-top: 15px;
        display: none;
    }

    .image-preview {
        max-width: 100%;
        max-height: 200px;
        border-radius: 8px;
        border: 1px solid #e1e1e1;
    }

    /* File Input Styling */
    .file-input-container {
        position: relative;
        overflow: hidden;
    }

    .file-input-button {
        position: relative;
        overflow: hidden;
        display: inline-block;
        cursor: pointer;
        background: linear-gradient(135deg, var(--primary), var(--secondary));
        color: white;
        padding: 8px 15px;
        border-radius: 8px;
        text-align: center;
        transition: all 0.3s;
    }

    .file-input-button:hover {
        transform: translateY(-2px);
        box-shadow: 0 5px 15px rgba(0, 103, 75, 0.2);
    }

    .file-input-button input[type="file"] {
        position: absolute;
        top: 0;
        right: 0;
        min-width: 100%;
        min-height: 100%;
        font-size: 100px;
        text-align: right;
        filter: alpha(opacity=0);
        opacity: 0;
        outline: none;
        cursor: pointer;
        display: block;
    }

    .file-name {
        margin-left: 10px;
        color: #6c757d;
    }

    /* Form Buttons */
    .form-buttons {
        margin-top: 30px;
        display: flex;
        justify-content: space-between;
    }

    .btn-farmer-secondary {
        background-color: #e9ecef;
        color: var(--dark-text);
        border: none;
        padding: 12px 20px;
        border-radius: 50px;
        font-weight: 500;
        transition: all 0.3s;
        display: inline-flex;
        align-items: center;
    }

    .btn-farmer-secondary:hover {
        background-color: #dee2e6;
        transform: translateY(-2px);
    }

    .btn-farmer-primary {
        background: linear-gradient(135deg, var(--primary), var(--secondary));
        color: white;
        border: none;
        padding: 12px 25px;
        border-radius: 50px;
        font-weight: 500;
        display: inline-flex;
        align-items: center;
        transition: all 0.3s;
        box-shadow: 0 4px 15px rgba(0, 103, 75, 0.2);
    }

    .btn-farmer-primary:hover {
        transform: translateY(-3px);
        box-shadow: 0 8px 25px rgba(0, 103, 75, 0.3);
        color: white;
    }

    .btn-farmer-primary i, .btn-farmer-secondary i {
        margin-right: 8px;
    }

    /* Alert Styling */
    .alert-validation {
        background-color: #fff8f8;
        border-left: 4px solid #dc3545;
        padding: 15px;
        margin-bottom: 20px;
        border-radius: 8px;
    }

    .alert-validation ul {
        margin-bottom: 0;
        padding-left: 20px;
    }

    .alert-validation li {
        margin-bottom: 5px;
    }

   
</style>

