<!-- Propose Project Form Start -->
<div class="container-fluid py-5" id="propose">
    <div class="container">
        <div class="text-center mx-auto mb-5" style="max-width: 700px;">
            <h6 class="text-primary text-uppercase">Share Your Ideas</h6>
            <h1 class="display-5 mb-2">Propose a New Project</h1>
            <div class="divider-green my-3 mx-auto" style="height: 3px; width: 70px; background: linear-gradient(to right, #00674b, #00AB66);"></div>
            <p class="mb-4">Have an innovative idea for sustainable agriculture or renewable energy? Submit your project proposal to find collaborators and potential funding.</p>
        </div>
        
        <div class="row justify-content-center">
            <div class="col-lg-10">
                <div class="bg-light rounded-3 p-5 shadow">
                    <form>
                        <div class="row g-3">
                            <div class="col-md-6">
                                <div class="form-floating">
                                    <input type="text" class="form-control border-0" id="projectTitle" placeholder="Project Title" required>
                                    <label for="projectTitle">Project Title</label>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-floating">
                                    <select class="form-select border-0" id="projectCategory" required>
                                        <option selected disabled value="">Select Category</option>
                                        <option value="solar">Solar Energy</option>
                                        <option value="wind">Wind Energy</option>
                                        <option value="biogas">Biogas Systems</option>
                                        <option value="storage">Energy Storage</option>
                                        <option value="thermal">Solar Thermal</option>
                                        <option value="smart">Smart Systems</option>
                                        <option value="other">Other</option>
                                    </select>
                                    <label for="projectCategory">Project Category</label>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-floating">
                                    <input type="number" class="form-control border-0" id="fundingNeeded" placeholder="Funding Needed (R)" required>
                                    <label for="fundingNeeded">Funding Needed (R)</label>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-floating">
                                    <input type="text" class="form-control border-0" id="projectDuration" placeholder="Estimated Duration">
                                    <label for="projectDuration">Estimated Duration (e.g., 12 months)</label>
                                </div>
                            </div>
                            <div class="col-12">
                                <div class="form-floating">
                                    <textarea class="form-control border-0" placeholder="Brief Project Summary" id="projectSummary" style="height: 100px" required></textarea>
                                    <label for="projectSummary">Brief Project Summary (Max 200 words)</label>
                                </div>
                            </div>
                            <div class="col-12">
                                <div class="form-floating">
                                    <textarea class="form-control border-0" placeholder="Project Description" id="projectDescription" style="height: 200px" required></textarea>
                                    <label for="projectDescription">Detailed Project Description</label>
                                </div>
                            </div>
                            <div class="col-12">
                                <div class="form-floating">
                                    <textarea class="form-control border-0" placeholder="Partners Needed" id="partnersNeeded" style="height: 100px" required></textarea>
                                    <label for="partnersNeeded">Partners Needed (skills, expertise, resources)</label>
                                </div>
                            </div>
                            <div class="col-12">
                                <div class="form-floating">
                                    <textarea class="form-control border-0" placeholder="Expected Outcomes" id="expectedOutcomes" style="height: 100px" required></textarea>
                                    <label for="expectedOutcomes">Expected Outcomes & Impact</label>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-floating">
                                    <input type="text" class="form-control border-0" id="contactName" placeholder="Contact Name" required>
                                    <label for="contactName">Contact Name</label>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-floating">
                                    <input type="email" class="form-control border-0" id="contactEmail" placeholder="Contact Email" required>
                                    <label for="contactEmail">Contact Email</label>
                                </div>
                            </div>
                            <div class="col-12 mt-4">
                                <button class="btn btn-primary w-100 py-3" type="submit">Submit Project Proposal</button>
                            </div>
                        </div>
                    </form>
                </div>
