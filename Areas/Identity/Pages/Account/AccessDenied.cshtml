@page
@model AccessDeniedModel
@{
    ViewData["Title"] = "Access Denied";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<style>
    :root {
        --primary: #00674b;
        --secondary: #00AB66;
        --tertiary: #00A693;
        --accent: #34AD54;
        --light: #F6FFF2;
        --white: #ffffff;
        --light-gray: #f8f9fa;
        --medium-gray: #e9ecef;
        --dark-text: #343a40;
        --danger: #dc3545;
        --danger-light: #f8d7da;
        --danger-dark: #842029;
    }

    .access-denied-container {
        display: flex;
        flex-direction: column;
        align-items: center;
        justify-content: center;
        min-height: 60vh;
        text-align: center;
        padding: 0 15px;
    }

    .access-denied-card {
        background-color: var(--white);
        border-radius: 15px;
        box-shadow: 0 5px 30px rgba(0, 0, 0, 0.05);
        padding: 0;
        max-width: 600px;
        width: 100%;
        overflow: hidden;
        position: relative;
        margin-bottom: 30px;
    }

    .access-denied-header {
        background-color: var(--danger-light);
        padding: 25px 30px;
        position: relative;
        border-bottom: 1px solid rgba(0, 0, 0, 0.05);
        text-align: center;
    }

    .access-denied-header::before {
        content: '';
        position: absolute;
        top: 0;
        left: 0;
        width: 6px;
        height: 100%;
        background-color: var(--danger);
    }

    .access-denied-header h1 {
        color: var(--danger-dark);
        font-size: 1.75rem;
        margin: 0;
        font-weight: 600;
    }

    .access-denied-body {
        padding: 30px;
    }

    .access-denied-icon {
        font-size: 5rem;
        color: var(--danger);
        margin-bottom: 20px;
    }

    .access-denied-message {
        color: var(--dark-text);
        font-size: 1.1rem;
        margin-bottom: 25px;
        line-height: 1.6;
    }

    .access-denied-info {
        background-color: var(--light-gray);
        border-radius: 10px;
        padding: 20px;
        margin-bottom: 25px;
        border-left: 4px solid var(--primary);
    }

    .access-denied-info p {
        margin: 0;
        color: var(--dark-text);
    }

    .btn-back-home {
        background: linear-gradient(135deg, var(--primary), var(--secondary));
        color: white;
        border: none;
        padding: 12px 25px;
        border-radius: 50px;
        font-weight: 500;
        display: inline-flex;
        align-items: center;
        transition: all 0.3s;
        box-shadow: 0 4px 15px rgba(0, 103, 75, 0.2);
        text-decoration: none;
    }

    .btn-back-home:hover {
        transform: translateY(-3px);
        box-shadow: 0 8px 25px rgba(0, 103, 75, 0.3);
        color: white;
    }

    .btn-back-home i {
        margin-right: 8px;
    }

</style>
<!-- Topbar Start -->
